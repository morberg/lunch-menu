{
  "name": "lunch-menu-scraper",
  "version": "1.0.0",
  "description": "A web scraper for extracting daily lunch menus from restaurants in Lund.",
  "main": "src/web/app.ts",
  "scripts": {
    "start": "npm run build && node dist/web/app.js",
    "dev": "ts-node src/web/app.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r src/web/views dist/web/",
    "vercel-build": "npm run build",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "cheerio": "^1.0.0-rc.3",
    "express": "^4.17.1",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.0",
    "@types/node": "^24.3.0",
    "@types/pdf-parse": "^1.1.5",
    "jest": "^26.6.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  },
  "author": "",
  "license": "ISC"
}
